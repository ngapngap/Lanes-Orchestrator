{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/research.shortlist.schema.json",
  "title": "research.shortlist.json",
  "description": "Research shortlist - vibe mode compatible with DoD vNext fields",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "run_id",
    "timestamp",
    "status"
  ],
  "properties": {
    "run_id": {
      "type": "string",
      "description": "Run ID"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Research timestamp"
    },
    "status": {
      "type": "string",
      "enum": ["ok", "degraded"],
      "description": "Research status (DoD vNext G5)"
    },
    "query": {
      "type": ["string", "null"],
      "description": "Search query used"
    },
    "note": {
      "type": "string",
      "description": "Status note or error message"
    },
    "repos": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "url"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Repository name (e.g., owner/repo)"
          },
          "url": {
            "type": "string",
            "format": "uri",
            "description": "Repository URL"
          },
          "stars": {
            "type": "integer",
            "minimum": 0,
            "description": "Star count"
          },
          "description": {
            "type": ["string", "null"],
            "description": "Repository description"
          },
          "why_relevant": {
            "type": "string",
            "description": "Why this repo is relevant to the project (DoD vNext)"
          },
          "pattern_to_reuse": {
            "type": "string",
            "description": "Pattern or architecture to reuse from this repo (DoD vNext)"
          },
          "relevance_score": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Relevance score 0-1 (DoD vNext)"
          }
        }
      },
      "description": "Shortlisted repositories"
    },
    "problem_summary": {
      "type": "string",
      "description": "Legacy: Summary of the problem"
    },
    "recommended_path": {
      "type": "string",
      "enum": ["reuse", "build", "hybrid"],
      "description": "Legacy: Recommended approach"
    },
    "rationale": {
      "type": "string",
      "description": "Legacy: Why this path"
    },
    "baseline_verification": {
      "type": "object",
      "properties": {
        "required": { "type": "boolean" },
        "cmds": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "description": "Legacy: Verification commands"
    },
    "candidates": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "repo_url": { "type": "string", "format": "uri" },
          "commit_or_tag": { "type": "string" },
          "license": { "type": "string" },
          "activity_score": { "type": "number", "minimum": 0, "maximum": 1 },
          "fit_score": { "type": "number", "minimum": 0, "maximum": 1 },
          "security_notes": { "type": "string" },
          "reuse_candidate": { "type": "boolean" },
          "bootstrap_steps": {
            "type": "array",
            "items": { "type": "string" }
          },
          "baseline_verification": {
            "type": "object",
            "properties": {
              "required": { "type": "boolean" },
              "cmds": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          },
          "effort_estimate": {
            "type": "string",
            "enum": ["XS", "S", "M", "L", "XL"]
          },
          "risks": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      },
      "description": "Legacy: Candidate repos with detailed info"
    },
    "assumptions": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Legacy: Assumptions"
    },
    "open_questions": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Legacy: Open questions"
    },
    "provenance": {
      "type": "object",
      "properties": {
        "timestamp": { "type": "string", "format": "date-time" },
        "mode": { "type": "string" },
        "model_versions": { "type": "object" },
        "commit_hash": { "type": "string" }
      },
      "description": "Legacy: Provenance info"
    }
  }
}
