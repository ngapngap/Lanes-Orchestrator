{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/classify.schema.json",
  "title": "classify.json",
  "description": "Project classification output from vibe mode classifier",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "timestamp",
    "input",
    "classification",
    "confidence",
    "signals",
    "needs_confirmation"
  ],
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version",
      "const": "1.0"
    },
    "run_id": {
      "type": "string",
      "description": "Run ID (added after classification)"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Classification timestamp"
    },
    "input": {
      "type": "object",
      "required": ["description"],
      "properties": {
        "description": {
          "type": "string",
          "description": "Original user description/prompt"
        },
        "cli_flags": {
          "type": ["object", "null"],
          "description": "CLI flag overrides if any"
        }
      }
    },
    "classification": {
      "type": "object",
      "required": ["project_kind", "language", "needs_auth", "needs_db", "deploy"],
      "properties": {
        "project_kind": {
          "type": "string",
          "enum": ["cli", "api", "web", "library", "data", "desktop", "mobile", "unknown"],
          "description": "Detected project type"
        },
        "language": {
          "type": "string",
          "enum": ["python", "node", "go", "rust", "dotnet", "java", "dart", "unknown"],
          "description": "Detected programming language"
        },
        "needs_auth": {
          "type": "string",
          "enum": ["none", "email", "api-key", "oauth", "phone", "custom", "unknown"],
          "description": "Authentication requirement"
        },
        "needs_db": {
          "type": "string",
          "enum": ["none", "sqlite", "postgres", "mysql", "mongodb", "unknown"],
          "description": "Database requirement"
        },
        "deploy": {
          "type": "string",
          "enum": ["local", "docker", "vercel", "vps", "none", "pip/npm package", "package registry", "App Store/Play Store"],
          "description": "Deploy target"
        }
      }
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Overall classification confidence (0-1)"
    },
    "signals": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Signals detected in the prompt"
    },
    "overrides": {
      "type": ["object", "null"],
      "description": "CLI flag overrides applied"
    },
    "needs_confirmation": {
      "type": "boolean",
      "description": "Whether classification needs user confirmation"
    }
  }
}
